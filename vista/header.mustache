<!--Google Fonts-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<style>
        @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');
        .pixel-font {
            font-family: 'Press Start 2P', cursive;
        }
        .pokeball-bg {
            background: linear-gradient(180deg, #ef4444 0%, #ef4444 45%, #1f2937 45%, #1f2937 55%, #f3f4f6 55%, #f3f4f6 100%);
        }
        </style>
            <style>
        .pokemon-border {
            border: 4px solid #2c3e50;
            box-shadow:
                    inset -4px -4px 0px rgba(0,0,0,0.3),
                    inset 4px 4px 0px rgba(255,255,255,0.3),
                    4px 4px 0px rgba(0,0,0,0.2);
        }

        .pokeball-bg {
            background: linear-gradient(180deg, #ef4444 0%, #ef4444 45%, #1f2937 45%, #1f2937 55%, #f3f4f6 55%, #f3f4f6 100%);
        }
    </style>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

</head>
<body class="bg-gray-100 pixel-font">
    <header class="bg-red-700 p-3 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
        <div class="flex items-center gap-4">
            <img src="/public/img/logo.png" alt="Pokéball Icon" class="w-24 h-24">
            <h1 class="text-yellow-300 text-3xl drop-shadow-lg" style="text-shadow: 3px 3px 0px #b45309;">POKETRIVIA</h1>
            </div>
            <nav class="flex gap-4">
    {{#usuario}}
    <a class="bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded pokemon-border font-bold transition-all" href="/lobby/base">Inicio</a>
    <a class="bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded pokemon-border font-bold transition-all" href="/logout">Cerrar sesión</a>
    <button id="btnMostrarQR" data-usuario-id="{{usuario_id}}" class="flex items-center justify-center transform bg-white pokemon-border w-12 h-12 shadow-lg hover:scale-105 transition-transform z-50 ">
    <img src="/public/img/qr-simple.png" alt="qr" class="w-12 h-10">
</button>
    {{/usuario}}

    {{^usuario}}
    <a class="bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded pokemon-border font-bold transition-all" href="/homeVista">Inicio</a>
    <a  class="bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded pokemon-border font-bold transition-all" href="/login/loginForm">Iniciar sesión</a>
    <a  class="bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded pokemon-border font-bold transition-all" href="/registrarse/registrarseForm">Registrarse</a>
    {{/usuario}}
