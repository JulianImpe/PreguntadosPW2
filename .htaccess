Options -Indexes

<FilesMatch ".*\.(log|ini|htaccess)$">
    deny from all
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /PreguntadosPW2/

    # No reescribir archivos o carpetas reales (CSS, im√°genes, JS, etc.)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # MVC routing: controller/method(/params)
    RewriteRule ^([^/]+)/([^/]+)/?(.*)$ index.php?controller=$1&method=$2&$3 [L,QSA]

    # controller/
    RewriteRule ^([^/]+)/?$ index.php?controller=$1 [L,QSA]
</IfModule>
