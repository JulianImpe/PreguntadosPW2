<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokémon Trivia - Partida</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/public/js/temporizador.js"></script>
        <script>
        tailwind.config = {
            theme: {
                extend: {
                    backgroundImage: {
                        'custom-gradient': 'linear-gradient(to bottom, var(--tw-gradient-from), var(--tw-gradient-to))',
                    }
                }
            }
        }
    </script>
    <style>
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .background-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            /* Tamaño recomendado para la imagen: 1920x1080px */
            max-width: 1920px;
            max-height: 1080px;
        }

        .btn-pokemon {
            transition: all 0.3s ease;
        }
        .btn-pokemon:hover {
            transform: translateY(-2px);
        }
    </style>

    <style>
        /* Estilos existentes */
        .btn-pokemon {
            transition: all 0.3s ease;
        }
        .btn-pokemon:hover {
            transform: translateY(-2px);
        }
        
        /* Agregar estilo de fondo como respaldo */
        body {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>

    <style>
        .btn-pokemon {
            transition: all 0.3s ease;
        }
        .btn-pokemon:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
    <div class="background-container">


<body class="bg-gradient-to-b from-red-100 to-red-300 min-h-screen p-4" style="background-image: url('/public/img/vsMisty.png');">
    </div>
<!-- Mensaje de feedback flotante -->
<div id="feedbackMessage" class="hidden fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 px-12 py-8 rounded-3xl shadow-2xl text-white text-4xl font-bold border-4 border-white animate-pulse">
</div>

<div class="max-w-2xl mx-auto">
    <!-- Título Medalla Cascada -->
    {{#medallas}}
        <div class="m-8 text-center">
            <div class="inline-block bg-gray-800 rounded-xl px-5 py-4 shadow-xl border-4 border-white mt-5 flex flex-row items-center justify-center gap-5">
                <img src="/public/{{imagen_url}}" alt="{{nombre}}" class="w-16 h-16 rounded-full border-2 border-white shadow-md mb-3">
                <h1 class="text-white text-2xl font-bold">{{nombre}}</h1>
            </div>
        </div>
    {{/medallas}}

    <!-- Contenedor principal -->
    <div class="bg-white rounded-2xl shadow-2xl p-12 m-6 border-4 border-gray-300">


        <!-- Timer -->
        <div class="text-center mb-6">
            <span id="timer" class="text-2xl font-bold">15</span> segundos restantes
            <div class="w-full h-4 bg-gray-300 rounded-full mt-2">
                <div id="progressBar" class="h-4 bg-sky-400 rounded-full w-full transition-all duration-300"></div>
            </div>
        </div>

        {{#pregunta}}
            <!-- Pregunta -->
            <div class="mb-8">
                <p id="pregunta" class="text-2xl font-semibold text-gray-900 text-center leading-relaxed">
                    {{texto}}
                </p>
            </div>
            <div class="mb-4 text-center">
                <span class="inline-block px-3 py-1 rounded-full font-semibold border-2 {{dificultad_clase}}">
                    {{nivel_dificultad}}{{#dificultad}} ({{dificultad}}){{/dificultad}}
                </span>
            </div>

            <!-- Formulario de respuestas -->
<form id="formRespuestas" method="POST" action="/partida/responder">
    <input type="hidden" name="pregunta_id" value="{{id}}">
    <input type="hidden" name="pregunta_token" value="{{pregunta_token}}">
    <input type="hidden" name="respuesta" id="respuestaInput" value="">
    <input type="hidden" name="respuesta_id_correcta" value="{{respuesta_correcta_id}}">

                <div class="space-y-4">
                    {{#respuestas}}
                        <button type="button"
                                data-respuesta-id="{{id}}"
                                data-correcta="{{es_correcta_str}}"
                                class="respuesta-btn w-full bg-white hover:bg-gray-50 rounded-xl p-6 border-4 border-gray-400 shadow-lg btn-pokemon text-left">
                            <div class="flex items-start gap-4">
                                <div class="letra-circulo w-10 h-10 bg-orange-500 rounded-full flex items-center justify-center font-black text-xl text-white flex-shrink-0 border-2 border-gray-800">
                                    {{letra}}
                                </div>
                                <p class="text-gray-900 font-medium text-lg leading-relaxed pt-1">
                                    {{texto}}
                                </p>
                            </div>
                        </button>
                    {{/respuestas}}
                </div>
            </form>
        {{/pregunta}}

        {{^pregunta}}
            <div class="bg-red-100 border-2 border-red-400 text-red-700 px-6 py-4 rounded-xl text-center mt-8">
                ❌ No se encontró ninguna pregunta disponible.
            </div>
        {{/pregunta}}
    </div>




</body>
<!--mensajito de exito-->
{{#exito_reporte}}
    <div id="mensajeExito" class="fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 flex items-center gap-3">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>{{exito_reporte}}</span>
    </div>
    <script>
        setTimeout(() => {
            const msg = document.getElementById('mensajeExito');
            msg.style.opacity = '0';
            setTimeout(() => msg.remove(), 300);
        }, 3000);
    </script>
{{/exito_reporte}}

{{#error_reporte}}
    <div id="mensajeError" class="fixed top-4 right-4 bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 flex items-center gap-3">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        <span>{{error_reporte}}</span>
    </div>
    <script>
        setTimeout(() => {
            const msg = document.getElementById('mensajeError');
            msg.style.opacity = '0';
            setTimeout(() => msg.remove(), 300);
        }, 3000);
    </script>
{{/error_reporte}}
</html>