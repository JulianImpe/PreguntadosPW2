                        </div>


                        <div>
                            <label for="foto_perfil" class="block text-gray-800 font-semibold mb-1.5 text-xs sm:text-sm">
                                Foto de Perfil (opcional)
                            </label>
                            <div class="relative">
                                <input
                                        type="file"
                                        id="foto_perfil"
                                        name="foto_perfil"
                                        accept="image/*"
                                        class="hidden"
                                        onchange="updateFileName(this)">
                                <label for="foto_perfil"
                                       class="flex items-center justify-center px-3 py-2 bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer transition-all duration-300 hover:bg-white hover:border-red-700 text-gray-600 hover:text-red-700">
                                    <span class="text-base sm:text-lg mr-2">üì∑</span>
                                    <span class="text-xs sm:text-sm">Seleccionar imagen</span>
                                </label>
                            </div>
                            <div id="fileName" class="mt-1.5 text-xs text-gray-600 italic"></div>
                        </div>
                    </div>
                </div>


                <div class="mt-5 sm:mt-6 flex justify-center">
                    <button type="submit"
                            class="w-full sm:max-w-sm py-2 sm:py-2.5 px-4 sm:px-5 bg-green-600 text-white font-bold uppercase tracking-wide text-sm sm:text-base border-3 sm:border-4 border-black shadow-[3px_3px_0_0_rgba(0,0,0,1)] hover:shadow-[2px_2px_0_0_rgba(0,0,0,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all duration-150">
                        Registrarse
                    </button>
                </div>
            </form>


            <div class="text-center mt-3 sm:mt-4 text-gray-600 text-xs sm:text-sm">
                ¬øYa tienes cuenta? <a href="/login/loginForm"
                                      class="text-red-700 font-bold no-underline transition-all duration-300 hover:text-red-600 hover:underline">Inicia
                sesi√≥n aqu√≠</a>
            </div>
        </div>
    </div>

    <script>
        function updateFileName(input) {
            const fileName = document.getElementById('fileName');
            if (input.files && input.files[0]) {
                fileName.textContent = 'üìÅ ' + input.files[0].name;
            } else {
                fileName.textContent = '';
            }
        }

        document.getElementById('registroForm').addEventListener('submit', function (e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.classList.add('opacity-70', 'cursor-not-allowed');
            btn.innerHTML = 'Registrando... <span class="inline-block animate-spin ml-2 align-middle"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="#fff" d="M12 2a10 10 0 0 1 10 10a10 10 0 0 1-10 10A10 10 0 0 1 2 12A10 10 0 0 1 12 2m0 2c-4.08 0-7.45 3.05-7.94 7h4.07c.44-1.73 2.01-3 3.87-3s3.43 1.27 3.87 3h4.07c-.49-3.95-3.86-7-7.94-7m0 16c4.08 0 7.45-3.05 7.94-7h-4.07c-.44 1.73-2.01 3-3.87 3s-3.43-1.27-3.87-3H4.06c.49 3.95 3.86 7 7.94 7m0-10a2 2 0 0 0-2 2a2 2 0 0 0 2 2a2 2 0 0 0 2-2a2 2 0 0 0-2-2"/></svg></span>';
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {

            const map = L.map('map').setView([-34.6037, -58.3816], 12);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
            }).addTo(map);

            let marker = L.marker([-34.6037, -58.3816]).addTo(map);

            map.on('click', async function(e) {
                const lat = e.latlng.lat;
                const lon = e.latlng.lng;

                if (!marker) {
                    marker = L.marker(e.latlng).addTo(map);
                } else {
                    marker.setLatLng(e.latlng);
                }

                try {
                    const response = await fetch(`/registrarse/reverseGeocode?lat=${lat}&lon=${lon}`);
                    const data = await response.json();
                    const address = data.address || {};

                    document.getElementById("pais").value = address.country || "";
                    document.getElementById("ciudad").value =
                            address.city || address.town || address.village || "";

                } catch (error) {
                    console.error("Error obteniendo ciudad y pa√≠s:", error);
                }
            });
        });
    </script>
</div>