<h2>Editar Medalla</h2>

<form method="POST" action="/editor/guardarMedalla" enctype="multipart/form-data">


    <input type="hidden" name="id" value="{{medalla.ID}}">

    <label>Nombre:</label>
    <input type="text" name="Nombre" value="{{medalla.Nombre}}" required>

    <label>Color (HEX):</label>
    <input type="color" name="Color" value="{{medalla.Color}}" required>

    <label>Imagen actual:</label>
    <img src="{{medalla.Imagen_url}}" width="100">

    <input type="hidden" name="Imagen_url_actual" value="{{medalla.Imagen_url}}">

    <label>Subir nueva imagen:</label>
    <input type="file" name="Imagen">

    <button type="submit">Guardar</button>
</form>
