<!-- Contenedor principal con fondo degradado -->
<div class="min-h-screen bg-gradient-to-br from-black via-gray-900 to-red-900 flex items-center justify-center p-5">
    
    <div class="w-full max-w-lg bg-white rounded-3xl shadow-2xl relative overflow-hidden">
        <!-- Barra superior decorativa -->
        <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-red-700 via-red-600 to-red-700"></div>
        
        <div class="p-8 md:p-10">
            <!-- Logo y t√≠tulo -->
            <div class="text-center mb-8">
                <div class="text-6xl mb-4">‚ö´</div>
                <h1 class="text-3xl md:text-4xl font-bold text-red-700 uppercase tracking-wider mb-2" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">
                    Pok√©mon Trivia
                </h1>
                <p class="text-gray-600 text-sm">√önete a la aventura</p>
            </div>

            <!-- Formulario -->
            <form method="POST" action="/registrarse/registrarse" enctype="multipart/form-data" id="registroForm">
                
                {{#error}}
                <div class="bg-red-50 border-l-4 border-red-700 text-red-800 p-3 rounded mb-5 text-sm">
                    {{error}}
                </div>
                {{/error}}

                <!-- Nombre Completo -->
                <div class="mb-5">
                    <label for="nombre_completo" class="block text-gray-800 font-semibold mb-2 text-sm">
                        Nombre Completo <span class="text-red-700">*</span>
                    </label>
                    <input
                        type="text"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-red-700 focus:ring-4 focus:ring-red-100 hover:border-red-700"
                        id="nombre_completo"
                        name="nombre_completo"
                        placeholder="Ej: Ash Ketchum"
                        required
                        value="{{nombre_completo}}">
                </div>

                <!-- Nombre de Usuario -->
                <div class="mb-5">
                    <label for="usuario" class="block text-gray-800 font-semibold mb-2 text-sm">
                        Nombre de Usuario <span class="text-red-700">*</span>
                    </label>
                    <input
                        type="text"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-red-700 focus:ring-4 focus:ring-red-100 hover:border-red-700"
                        id="usuario"
                        name="usuario"
                        placeholder="Ej: ash_maestro"
                        required
                        pattern="[a-zA-Z0-9_]{3,20}"
                        title="3-20 caracteres: letras, n√∫meros y gui√≥n bajo"
                        value="{{usuario}}">
                </div>

                <!-- Email -->
                <div class="mb-5">
                    <label for="email" class="block text-gray-800 font-semibold mb-2 text-sm">
                        Email <span class="text-red-700">*</span>
                    </label>
                    <input
                        type="email"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-red-700 focus:ring-4 focus:ring-red-100 hover:border-red-700"
                        id="email"
                        name="email"
                        placeholder="tu@email.com"
                        required
                        value="{{email}}">
                </div>

                <!-- Contrase√±a y Fecha de Nacimiento -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-5">
                    <div>
                        <label for="password" class="block text-gray-800 font-semibold mb-2 text-sm">
                            Contrase√±a <span class="text-red-700">*</span>
                        </label>
                        <input
                            type="password"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-red-700 focus:ring-4 focus:ring-red-100 hover:border-red-700"
                            id="password"
                            name="password"
                            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                            required
                            minlength="6">
                    </div>

                    <div>
                        <label for="fechaNacimiento" class="block text-gray-800 font-semibold mb-2 text-sm">
                            Fecha Nacimiento <span class="text-red-700">*</span>
                        </label>
                        <input
                            type="date"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-red-700 focus:ring-4 focus:ring-red-100 hover:border-red-700"
                            id="fechaNacimiento"
                            name="fechaNacimiento"
                            required
                            max="2010-01-01"
                            value="{{fechaNacimiento}}">
                    </div>
                </div>

                <!-- Foto de Perfil -->
                <div class="mb-6">
                    <label for="foto_perfil" class="block text-gray-800 font-semibold mb-2 text-sm">
                        Foto de Perfil (opcional)
                    </label>
                    <div class="relative">
                        <input
                            type="file"
                            id="foto_perfil"
                            name="foto_perfil"
                            accept="image/*"
                            class="hidden"
                            onchange="updateFileName(this)">
                        <label for="foto_perfil" class="flex items-center justify-center px-4 py-3 bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer transition-all duration-300 hover:bg-white hover:border-red-700 text-gray-600 hover:text-red-700">
                            <span class="text-xl mr-2">üì∑</span>
                            <span>Seleccionar imagen</span>
                        </label>
                    </div>
                    <div id="fileName" class="mt-2 text-xs text-gray-600 italic"></div>
                </div>

                <!-- Bot√≥n Submit -->
                <button type="submit" class="w-full py-4 bg-gradient-to-r from-red-700 to-red-600 text-white rounded-lg text-lg font-bold uppercase tracking-wide cursor-pointer transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5 hover:from-red-600 hover:to-red-700 active:translate-y-0">
                    Registrarse
                </button>
            </form>

            <!-- Link de inicio de sesi√≥n -->
            <div class="text-center mt-5 text-gray-600 text-sm">
                ¬øYa tienes cuenta? <a href="/PreguntadosPW2/index.php?controller=Login&method=loginForm" class="text-red-700 font-bold no-underline transition-all duration-300 hover:text-red-600 hover:underline">Inicia sesi√≥n aqu√≠</a>
            </div>
        </div>
    </div>

    <script>
        function updateFileName(input) {
            const fileName = document.getElementById('fileName');
            if (input.files && input.files[0]) {
                fileName.textContent = 'üìÅ ' + input.files[0].name;
            } else {
                fileName.textContent = '';
            }
        }

        // Animaci√≥n de carga en el bot√≥n
        document.getElementById('registroForm').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.classList.add('opacity-70', 'cursor-not-allowed');
            btn.innerHTML = 'Registrando... <span class="inline-block animate-spin ml-2">‚ö™</span>';
        });
    </script>
    
</div>

