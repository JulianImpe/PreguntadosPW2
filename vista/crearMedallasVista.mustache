<h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">
    Crear Nueva Medalla
</h2>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <form action="/editor/guardarMedalla" method="POST" enctype="multipart/form-data" class="space-y-4">

        <div>
            <label class="block font-semibold text-gray-700 mb-1">Nombre</label>
            <input type="text"
                   name="Nombre"
                   required
                   class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300">
        </div>

        <div>
            <label class="block font-semibold text-gray-700 mb-1">Color</label>
            <input type="color"
                   name="Color"
                   required
                   class="w-16 h-10 p-1 border border-gray-300 rounded cursor-pointer">
        </div>

        <div>
            <label class="block font-semibold text-gray-700 mb-1">Imagen</label>
            <input type="file"
                   name="Imagen"
                   accept="image/*"
                   required
                   class="w-full border border-gray-300 rounded px-3 py-2 bg-gray-50 cursor-pointer">
        </div>

        <button type="submit"
                class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 rounded transition">
            Guardar
        </button>
    </form>
</div>
