<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Partida - Pokémon Trivia</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-sky-300 via-blue-200 to-emerald-300">

<!-- barra -->
<div class="mb-8 relative w-full h-20 rounded-xl overflow-hidden border-4 border-gray-800 shadow-xl bg-cover bg-center">
    <div id="progressBar" class="h-full bg-sky-400 transition-all duration-1000"></div>

    <!-- min -->
    <div class="absolute inset-0 flex items-center justify-center">
        <div class="bg-white bg-opacity-70 rounded-2xl px-6 py-2 text-center shadow-md">
        </div>
    </div>

    <!-- Imagen pequeña en la esquina superior derecha -->
    <img src="imagenes/categorias/Cascada.png"
         class="absolute top-2 right-2 w-12 h-12 object-cover z-10 rounded-full shadow-lg"
         alt="Icono pequeño">
</div>


        {{^pregunta}}
            ❌ NO HAY PREGUNTA - $pregunta está vacío
        {{/pregunta}}
    </pre>
</div>

<main class="container mx-auto px-5 py-8 max-w-4xl">

    <!-- Temporizador -->
    <div class="mb-8 text-center">
        <div class="inline-block bg-white rounded-2xl px-10 py-5 border-4 border-gray-800 shadow-xl">
            <div class="flex items-center gap-4">
                <span class="text-4xl">⏱️</span>
                <div>
                    <p class="text-gray-600 text-sm font-semibold">Tiempo restante</p>
                    <p id="timer" class="text-5xl font-black text-gray-900">15</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Globo de pregunta -->
    <div class="mb-10">
        <div class="bg-white rounded-3xl p-10 border-4 border-gray-800 shadow-2xl">
            <p id="pregunta" class="text-3xl font-semibold text-gray-900 text-center leading-relaxed">
                {{#pregunta}}
                    {{texto}}
                {{/pregunta}}
                {{^pregunta}}
                    [ERROR: No hay pregunta]
                {{/pregunta}}
            </p>
        </div>
    </div>

    <!-- Opciones -->
    <div class="space-y-4 mb-10">
        {{#pregunta.respuestas}}
            <button onclick="seleccionarRespuesta({{id}})"
                    class="w-full bg-white hover:bg-gray-50 rounded-2xl p-6 border-4 border-gray-800 shadow-lg hover:shadow-2xl hover:-translate-y-1 transition-all text-left">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center font-black text-xl text-white flex-shrink-0 border-2 border-gray-800">
                        {{letra}}
                    </div>
                    <p class="text-gray-900 font-medium text-xl leading-relaxed pt-1">
                        {{texto}}
                    </p>
                </div>
            </button>
        {{/pregunta.respuestas}}

        {{^pregunta.respuestas}}
            <p style="color: red; font-weight: bold;">❌ No hay respuestas disponibles</p>
        {{/pregunta.respuestas}}
    </div>


</main>

<!-- crear carpeta js en public  -->

<script>let tiempoRestante = 15;
const timerElement = document.getElementById('timer');
const progressBar = document.getElementById('progressBar');
const tiempoTotal = 15;

const countdown = setInterval(() => {
    tiempoRestante--;
    timerElement.textContent = tiempoRestante;

    // Actualizar barra
    const porcentaje = (tiempoRestante / tiempoTotal) * 100;
    progressBar.style.width = porcentaje + "%";

    if (tiempoRestante <= 5) {
        timerElement.classList.add('text-red-600');
    }

    if (tiempoRestante <= 0) {
        clearInterval(countdown);
        timerElement.textContent = '0';

        // Llamada al backend para mostrar vista final
        fetch('/PreguntadosPW2/index.php?controller=Partida&method=partidaFinalizada')
                .then(response => response.text())
                .then(html => {
                    document.body.innerHTML = html;
                });
    }
}, 1000);
</script>

</body>
</html>