<!-- Contenedor principal con fondo degradado -->
<div class="min-h-screen bg-[url('/public/img/pika-fondo.jpeg')] bg-fixed bg-cover bg-center flex items-center justify-center p-5">

    <div class="w-full max-w-md bg-white rounded-3xl shadow-2xl relative overflow-hidden">
        <!-- Barra superior decorativa -->
        <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-red-700 via-red-600 to-red-700"></div>

        <div class="p-8 md:p-10">
            <!-- Logo y título -->
            <div class="text-center mb-8">
                <div class="text-6xl mb-4">
                    <div class="text-center mb-4 flex justify-center">
                        <svg class="text-center" xmlns="http://www.w3.org/2000/svg" width="80" height="80"
                             viewBox="0 0 24 24">
                            <path fill="currentColor"
                                  d="M12 2a10 10 0 0 1 10 10a10 10 0 0 1-10 10A10 10 0 0 1 2 12A10 10 0 0 1 12 2m0 2c-4.08 0-7.45 3.05-7.94 7h4.07c.44-1.73 2.01-3 3.87-3s3.43 1.27 3.87 3h4.07c-.49-3.95-3.86-7-7.94-7m0 16c4.08 0 7.45-3.05 7.94-7h-4.07c-.44 1.73-2.01 3-3.87 3s-3.43-1.27-3.87-3H4.06c.49 3.95 3.86 7 7.94 7m0-10a2 2 0 0 0-2 2a2 2 0 0 0 2 2a2 2 0 0 0 2-2a2 2 0 0 0-2-2"/>
                        </svg>
                    </div>
                </div>
                <h1 class="text-1xl md:text-2xl font-bold text-red-700 uppercase tracking-wider mb-2"
                    style="text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">
                    Completá con tus datos
                </h1>
            </div>

            <!-- Formulario de login -->
            <form method="POST" action="/login/login" id="loginForm">

                {{#error}}
                    <div class="bg-red-50 border-l-4 border-red-700 text-red-800 p-3 rounded mb-5 text-sm">
                        {{error}}
                    </div>
                {{/error}}

                <!-- Usuario -->
                <div class="mb-5">
                    <label for="usuario" class="block text-gray-800 font-semibold mb-2 text-sm">
                        Usuario <span class="text-red-700">*</span>
                    </label>
                    <input
                            type="text"
                            id="usuario"
                            name="usuario"
                            placeholder="Ej: ash_maestro"
                            required
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-red-700 focus:ring-4 focus:ring-red-100 hover:border-red-700"
                    >
                </div>

                <!-- Contraseña -->
                <div class="mb-6">
                    <label for="password" class="block text-gray-800 font-semibold mb-2 text-sm">
                        Contraseña <span class="text-red-700">*</span>
                    </label>
                    <input
                            type="password"
                            id="password"
                            name="password"
                            placeholder="••••••••"
                            required
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-red-700 focus:ring-4 focus:ring-red-100 hover:border-red-700"
                    >
                </div>

                <!-- Botón Ingresar -->
                <button type="submit"
                        class="w-full py-3 px-6 bg-green-600 text-white font-bold uppercase tracking-wide text-lg border-4 border-black shadow-[4px_4px_0_0_rgba(0,0,0,1)] hover:shadow-[2px_2px_0_0_rgba(0,0,0,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all duration-150">
                    Ingresar
                </button>
            </form>

            <!-- Link de registro -->
            <div class="text-center mt-5 text-gray-600 text-sm">
                ¿No tienes cuenta? <a href="/registrarse/registrarseForm"
                                      class="text-red-700 font-bold no-underline transition-all duration-300 hover:text-red-600 hover:underline">Regístrate
                aquí</a>
            </div>
        </div>
    </div>

    <script>
        // Animación de carga en el botón
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.classList.add('opacity-70', 'cursor-not-allowed');
            btn.innerHTML = 'Ingresando... <span class="inline-block animate-spin ml-2"><svg class="text-center" xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2a10 10 0 0 1 10 10a10 10 0 0 1-10 10A10 10 0 0 1 2 12A10 10 0 0 1 12 2m0 2c-4.08 0-7.45 3.05-7.94 7h4.07c.44-1.73 2.01-3 3.87-3s3.43 1.27 3.87 3h4.07c-.49-3.95-3.86-7-7.94-7m0 16c4.08 0 7.45-3.05 7.94-7h-4.07c-.44 1.73-2.01 3-3.87 3s-3.43-1.27-3.87-3H4.06c.49 3.95 3.86 7 7.94 7m0-10a2 2 0 0 0-2 2a2 2 0 0 0 2 2a2 2 0 0 0 2-2a2 2 0 0 0-2-2"/></svg></span>';
        });
    </script>
</div>
