<body>
<link rel="stylesheet" href="registrarse.css">
    <div class="registro-container">
        <div class="logo-container">
            <div class="pokeball-icon"></div>
            <h1>Pokémon Trivia</h1>
            <p>Únete a la aventura</p>
        </div>


        <form method="POST" action="/registrarse/registrarse" enctype="multipart/form-data" id="registroForm">
        {{#error}}
        <div class="error-message">
            {{error}}
        </div>
        {{/error}}
            <div class="form-group">
                <label for="nombre_completo">
                    Nombre Completo <span>*</span>
                </label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="nombre_completo" 
                    name="nombre_completo" 
                    placeholder="Ej: Ash Ketchum"
                    required
                    value="nombre_completo">
            </div>

            <div class="form-group">
                <label for="usuario">
                    Nombre de Usuario <span>*</span>
                </label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="usuario" 
                    name="usuario" 
                    placeholder="Ej: ash_maestro"
                    required
                    pattern="[a-zA-Z0-9_]{3,20}"
                    title="3-20 caracteres: letras, números y guión bajo"
                    value="usuario">
            </div>

            <div class="form-group">
                <label for="email">
                    Email <span>*</span>
                </label>
                <input 
                    type="email" 
                    class="form-control" 
                    id="email" 
                    name="email" 
                    placeholder="tu@email.com"
                    required
                    value="email">
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="password">
                        Contraseña <span>*</span>
                    </label>
                    <input 
                        type="password" 
                        class="form-control" 
                        id="password" 
                        name="password" 
                        placeholder="••••••••"
                        required
                        minlength="6">
                </div>

                <div class="form-group">
                    <label for="fechaNacimiento">
                        Fecha Nacimiento <span>*</span>
                    </label>
                    <input 
                        type="date" 
                        class="form-control" 
                        id="fechaNacimiento" 
                        name="fechaNacimiento" 
                        required
                        max="2010-01-01"
                        value="fechaNacimiento">
                </div>
            </div>

            <div class="form-group">
                <label for="foto_perfil">
                    Foto de Perfil (opcional)
                </label>
                <div class="file-input-wrapper">
                    <input 
                        type="file" 
                        id="foto_perfil" 
                        name="foto_perfil" 
                        accept="image/*"
                        onchange="updateFileName(this)">
                    <label for="foto_perfil" class="file-input-label">
                        Seleccionar imagen
                    </label>
                </div>
                <div class="file-name" id="fileName"></div>
            </div>

            <button type="submit" class="btn-submit">
                Registrarse
            </button>
        </form>

        <div class="login-link">
            ¿Ya tienes cuenta? <a href="/login/loginForm">Inicia sesión aquí</a>
        </div>
    </div>
